header.header.header--transparent
  .container
    .header__wrap 
      .logo 
        a(href="/")
          img(class="lazy" data-src="assets/img/logo-white.svg", alt="")
      .header__left-col
        .nav
          mixin list(data)
            ul
              each item, index in  data.items
                if index == 0
                  li.active
                    a(href="#")=item.title
                    if item.sublevel 
                      i.icon-angle-down
                      +list(item)
                else
                  li
                    a(href="#")=item.title
                    if item.sublevel 
                      i.icon-angle-down
                      +list(item)
          - var data = {"items": [{"title": "Главная"}, {"title": "Туры","sublevel": true,"items": [{"title": "Туры 1"}, {"title": "Туры 2"}, {"title": "Туры 3"}, {"title": "Туры 4"}]},{"title": "Аренда"},{"title": "События"},{"title": "Галерея"},{"title": "О нас"},{"title": "Контакты"}]}
          +list(data)
          include ../../includes/social-black.pug
        include ../../includes/social-white.pug

        .search.search-js
          .search__icon
            svg(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewBox='0 0 24 24' fill='none')
              path(d='M18.031 16.617L22.314 20.899L20.899 22.314L16.617 18.031C15.0237 19.3082 13.042 20.0029 11 20C6.032 20 2 15.968 2 11C2 6.032 6.032 2 11 2C15.968 2 20 6.032 20 11C20.0029 13.042 19.3082 15.0237 18.031 16.617ZM16.025 15.875C17.2941 14.5699 18.0029 12.8204 18 11C18 7.132 14.867 4 11 4C7.132 4 4 7.132 4 11C4 14.867 7.132 18 11 18C12.8204 18.0029 14.5699 17.2941 15.875 16.025L16.025 15.875V15.875Z' fill='#fff')
              clippath#clip0_77_1126
                rect(width='24' height='24')
        .lang
          .lang__item.active
            a(href="#" data-lang="Ru") 
              span Ru  
          .lang__item
            a(href="#" data-lang="En") 
              span En  

        .hamburger 
          span


